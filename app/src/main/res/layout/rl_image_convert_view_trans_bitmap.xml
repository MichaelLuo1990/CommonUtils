<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sv_image_convert"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_image_convert"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="this is TextView" />

            <ImageView
                android:id="@+id/iv_image_convert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_car_audi" />

            <Button
                android:id="@+id/btn_image_convert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/iv_image_convert"
                android:layout_centerHorizontal="true"
                android:text="this is button" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>